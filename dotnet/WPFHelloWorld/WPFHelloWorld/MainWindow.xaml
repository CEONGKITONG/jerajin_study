<Window x:Class="WPFHelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFHelloWorld"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="label" Content="Enter a Name ?" HorizontalAlignment="Left" Height="43" Margin="86,123,0,0" VerticalAlignment="Top" Width="219"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="43" Margin="337,123,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="184"/>
        <Button x:Name="button" Content="Click Me" HorizontalAlignment="Left" Height="43" Margin="595,123,0,0" VerticalAlignment="Top" Width="128" Click="button_Click"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Height="34" Margin="99,204,0,0" TextWrapping="Wrap" Text="Hello World! I am clickable" VerticalAlignment="Top" Width="624" MouseLeftButtonUp="textBlock_MouseLeftButtonUp"/>

    </Grid>
</Window>
